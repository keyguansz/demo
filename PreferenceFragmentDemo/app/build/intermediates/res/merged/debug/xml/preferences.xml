<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:title="Settings" >
    <PreferenceCategory
        android:key="myLocation"
        android:summary="我的位置"
        android:title="位置源">
        <CheckBoxPreference
            android:key="wireless_network"
            android:summary="使用无线网络查看应用程序的位置"
            android:title="使用无线网络"/>
        <ListPreference
            android:key="mycitites"
            android:summary="选择城市"
            android:dialogTitle="请选择城市"
            android:entries="@array/cities"
            android:entryValues="@array/citiesv"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="mymsg"
        android:summary="请输入个人信息"
        android:title="个人信息">
        <EditTextPreference
            android:id="@+id/myname"
            android:key="myname"
            android:title="请输入真实姓名"
            android:summary="姓名"/>
    </PreferenceCategory>

    <PreferenceScreen
        android:key="emotions"
        android:summary="emotions"
        android:title="emotions">
        <CheckBoxPreference
            android:key="emotions_love"
            android:defaultValue="true"
            android:summaryOn="yes, i am"
            android:summaryOff="no,"
            android:title="love me?"/>
        <CheckBoxPreference
            android:key="emotions_go"
            android:defaultValue="false"
            android:summaryOn="yes"
            android:summaryOff="no,"
            android:title="Go?"/>
    </PreferenceScreen>
    <PreferenceScreen
        android:key="live"
        android:summary="live"
        android:title="live">
        <CheckBoxPreference
            android:key="live_eat"
            android:defaultValue="true"
            android:summaryOn="yes"
            android:summaryOff="no,"
            android:title="eat?"/>
        <CheckBoxPreference
            android:key="live_f"
            android:defaultValue="false"
            android:summaryOn="yes"
            android:summaryOff="no,"
            android:title="Friends?"/>
    </PreferenceScreen>

</PreferenceScreen>