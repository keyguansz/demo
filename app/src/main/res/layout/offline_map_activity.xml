<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_green"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_offline_map_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/offlinemap_tab_down_btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/left_while_borde_rounded"
                android:text="下载管理"
                android:textColor="@color/offlinemap_gray_4a">
            </TextView>

            <TextView
                android:id="@+id/offlinemap_tab_city_btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/right_while_borde_rounded_focused"
                android:orientation="horizontal"
                android:text="城市列表"
                android:textColor="@color/offlinemap_gray_4a">
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/offlinemap_tab_down"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/offlinemap_gray_9b"
                android:text="下载队列"/>

            <ExpandableListView
                android:id="@+id/offlinemap_tab_down_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:cacheColorHint="#00000000"
                android:divider="@color/offlinemap_gray_9b"
                android:childDivider="@color/offlinemap_gray_db"

                android:dividerHeight="1dp"
                android:listSelector="#00000000"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/offlinemap_gray_9b"
                android:text="下载完成"/>

            <ExpandableListView
                android:id="@+id/offlinemap_tab_down_complete"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:cacheColorHint="#00000000"
                android:childDivider="@color/offlinemap_gray_9b"
                android:divider="@color/offlinemap_gray_9b"
                android:dividerHeight="1dp"
                android:listSelector="#00000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/offlinemap_tab_city"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                style="@style/pay_list_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_map_city"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edit_text"
                    android:hint="请输入城市名称"/>

                <Button
                    android:id="@+id/b_offline_map_search"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"
                    android:background="@drawable/ktc_button_selector"
                    android:text="搜索"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <ExpandableListView
                android:id="@+id/list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:cacheColorHint="#00000000"
                android:childDivider="@android:color/darker_gray"
                android:divider="@color/offlinemap_gray_9b"
                android:dividerHeight="1.5dip"
                android:listSelector="#00000000"/>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>